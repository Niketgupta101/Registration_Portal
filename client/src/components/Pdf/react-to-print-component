  return (
    <div>
         <ReactToPrint content={() => this.componentRef}>
           <PrintContextConsumer>
             {({ handlePrint }) => (
              <button onClick={handlePrint}>Print this out!</button>
            )}
          </PrintContextConsumer>
        </ReactToPrint>
        <ReviewInf ref={el => (this.componentRef = el)} />
      </div>
  )
}

export default reactToPrintComponent